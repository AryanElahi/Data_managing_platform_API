generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5434/template1?schema=public"
}


model User {
  id          Int          @id @default(autoincrement())
  email       String       @default("")
  phone       String       @unique
  password    String       // Hashed password
  fullName    String       @default("")
  avatar      Json         @db.JsonB @default("{}")
  bio         String       @default("")
  admin       Boolean      @default(false)
  blocked     Boolean      @default(false)
  createdAt   DateTime     @default(now())
  datasets    Dataset[]
  submissions Submission[]
}

model label {
  id    Int    @id @unique @default(autoincrement())
  name  String
  LableOnCompetition LableOnCompetition[]
}

model LableOnCompetition {
  id Int @unique @default(autoincrement())
  compId Int
  comp Competition @relation(fields: [compId], references: [id])
  labelId Int
  label label @relation(fields: [labelId], references: [id])

}

model Competition {
  id          Int          @id @unique @default(autoincrement())
  title       String
  description String       @default("")
  prize       String       @default("")
  deadline    DateTime
  level       String    @default("")
  status    Boolean      @default(false)
  createdAt   DateTime     @default(now())
  datasetId   Int          @unique
  dataset     Dataset      @relation(fields: [datasetId], references: [id])
  submissions Submission[]
  labels LableOnCompetition[]
}

model Dataset {
  id           Int           @id @default(autoincrement())
  title        String
  description  String        @default("")
  fileUrl      String
  fileSize     Int           @default(0)
  tags         String        @default("")
  published    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  uploaderId   Int
  uploader     User          @relation(fields: [uploaderId], references: [id])
  competition  Competition?
}

model Submission {
  id             Int          @id @default(autoincrement())
  score          Float        @default(0)
  fileUrl        String
  createdAt      DateTime     @default(now())
  userId         Int
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  competitionId  Int
  competition    Competition  @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  @@index([competitionId, score(sort: Desc)])
}

model Visitor {
  id    Int    @id @default(autoincrement())
  date  String
  ip    String
}
